<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout
         android:orientation="vertical"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">

        <Switch android:text="标准开关Standard switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dip" />

        <Switch android:text="默认是Default is on"
                android:checked="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dip" />

        <Switch android:id="@+id/monitored_switch"
                android:text="监视开关Monitored switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dip" />

        <Switch android:text="自定义文本Customized text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOn="YES"
                android:textOff="NO"
                android:layout_marginBottom="32dip" />

        <Switch android:text="这是一个有很多在它的文本的开关的一个例子。它可能最终缠绕到另一行。交换机将在顶部被固定。This is an example of a switch with a lot of text in it. It may end up wrapping to another line. The switch will be pinned at the top."
                android:singleLine="false"
                android:layout_width="300dip"
                android:layout_height="wrap_content"
                android:gravity="top|left"
                android:layout_marginBottom="32dip" />

        <Switch android:text="这是一个有很多在它的文本的开关的一个例子。它可能最终缠绕到另一行。交换机将被垂直居中。This is an example of a switch with a lot of text in it. It may end up wrapping to another line. The switch will be vertically centered."
                android:singleLine="false"
                android:layout_width="300dip"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:layout_marginBottom="32dip" />

        <Switch android:text="这是一个有很多在它的文本的开关的一个例子。它可能最终缠绕到另一行。交换机将在底部被固定。This is an example of a switch with a lot of text in it. It may end up wrapping to another line. The switch will be pinned at the bottom."
                android:singleLine="false"
                android:layout_width="300dip"
                android:layout_height="wrap_content"
                android:gravity="bottom|left"
                android:layout_marginBottom="32dip" />

        <Switch android:text="开关，match_parent宽度Switch with match_parent width"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dip" />

        <TextView android:text="独立开关如下Standalone switch below:"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />

        <Switch android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>
